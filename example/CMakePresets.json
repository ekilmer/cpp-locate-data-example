{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "vcpkg",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "dependencies-build-dir-ci",
      "hidden": true,
      "description": "Path to where our main library was built",
      "cacheVariables": {
        "locate-example_DIR": "${sourceDir}/../build/share/locate-example"
      }
    },
    {
      "name": "dependencies-install-dir-ci",
      "hidden": true,
      "description": "Path to where our main library is installed",
      "cacheVariables": {
        "locate-example_DIR": "${sourceDir}/../prefix/share/locate-example"
      }
    },
    {
      "name": "cmake-pedantic",
      "hidden": true,
      "warnings": {
        "dev": true,
        "deprecated": true,
        "uninitialized": true,
        "unusedCli": true,
        "systemVars": false
      },
      "errors": {
        "dev": true,
        "deprecated": true
      }
    },
    {
      "name": "dev-mode",
      "hidden": true,
      "inherits": "cmake-pedantic"
    },
    {
      "name": "ci-std",
      "description": "This preset makes sure the project actually builds with at least the specified standard",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      }
    },
    {
      "name": "flags-unix",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Wconversion -Wsign-conversion -Wcast-qual -Wshadow -Wformat=2 -Wundef -Werror=float-equal"
      }
    },
    {
      "name": "flags-windows",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/W4 /permissive- /utf-8 /volatile:iso /EHsc /Zc:__cplusplus /Zc:throwingNew"
      }
    },
    {
      "name": "ci-unix",
      "generator": "Unix Makefiles",
      "hidden": true,
      "inherits": ["flags-unix", "ci-std"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "ci-win64",
      "inherits": ["flags-windows", "ci-std"],
      "generator": "Visual Studio 16 2019",
      "architecture": "x64",
      "hidden": true
    },
    {
      "name": "ci-build",
      "binaryDir": "${sourceDir}/build",
      "hidden": true
    },
    {
      "name": "ci-macos-11-build-dir",
      "inherits": ["ci-build", "ci-unix", "dev-mode", "vcpkg", "dependencies-build-dir-ci"],
      "errors": {
        "dev": false
      }
    },
    {
      "name": "ci-ubuntu-20.04-build-dir",
      "inherits": ["ci-build", "ci-unix", "dev-mode", "vcpkg", "dependencies-build-dir-ci"],
      "errors": {
        "dev": false
      }
    },
    {
      "name": "ci-windows-2019-build-dir",
      "inherits": ["ci-build", "ci-win64", "dev-mode", "vcpkg", "dependencies-build-dir-ci"],
      "errors": {
        "dev": false
      }
    },
    {
      "name": "ci-macos-11-install-dir",
      "inherits": ["ci-build", "ci-unix", "dev-mode", "vcpkg", "dependencies-install-dir-ci"],
      "errors": {
        "dev": false
      }
    },
    {
      "name": "ci-ubuntu-20.04-install-dir",
      "inherits": ["ci-build", "ci-unix", "dev-mode", "vcpkg", "dependencies-install-dir-ci"],
      "errors": {
        "dev": false
      }
    },
    {
      "name": "ci-windows-2019-install-dir",
      "inherits": ["ci-build", "ci-win64", "dev-mode", "vcpkg", "dependencies-install-dir-ci"],
      "errors": {
        "dev": false
      }
    }
  ]
}
